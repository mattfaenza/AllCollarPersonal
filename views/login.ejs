<!DOCTYPE html>
<html>
	<head>

		<!--our own css-->
		<link rel="stylesheet" type="text/css" href="./stylesheets/stylesheet.css">
		
		<!--bootstrap cdn-->
		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		<!-- Optional theme -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
	</head>

	<body>
	<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '404711866388396',
      xfbml      : true,
      version    : 'v2.4'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
		<!--html code goes here -->
		<div id="cont" class="container">
		
			<div id="titleBox" class="jumbotron">
				<h1 id="title">Welcome to AllCollar</h1>
			</div>
			
			<div id="infoBox" class="row">
				<div class="col-xs-5 col-xs-offset-4 text-center">
				  <h4>Sign in to an existing account</h4>
				  <form action="/login" method="post" role="form">
					
					<div class="form-group">
					  <label for="username">Username:</label>
					  <input type="username" class="form-control" id="username" name="user"placeholder="Enter Username">
					</div>
					
					<div class="form-group">
					  <label for="pwd">Password:</label>
					  <input type="password" class="form-control" id="pwd" name="pwd" placeholder="Enter password">
					</div>
					<div
					  class="fb-like"
					  data-share="true"
					  data-width="450"
					  data-show-faces="true">
					</div>
					<button id="submitButton" type="submit" class="btn btn-primary">Submit</button>
					<a href="/register" class="btn btn-info" role="button">Register for a new account</a>
				  </form>
				</div>
			 </div>
			 
		</div>
		
		<!--jquery cdn-->
		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
